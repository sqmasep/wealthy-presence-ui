{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "paths": {
      "~/*": ["./src/*"]
    },
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".eslintrc.cjs",
    "prettier.config.cjs",
    "src/index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
